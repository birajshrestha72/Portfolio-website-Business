pipeline {
  agent any

  stages {
    stage('Clone Repo') {
      steps {
        git url: 'https://github.com/birajshrestha72/Portfolio-website-Business.git'
      }
    }

    stage('Build Docker Image') {
      steps {
        sh 'docker build -t portfolio-website:latest .'
      }
    }

    stage('Run Container') {
      steps {
        sh 'docker rm -f portfolio-container || true'
        sh 'docker run -d -p 3000:80 --name portfolio-container portfolio-website:latest'
      }
    }
  }
}
